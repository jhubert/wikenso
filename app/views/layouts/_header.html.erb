<nav class="wiki-header top-bar">
  <ul class="title-area">

  </ul>


  <section class="top-bar-section">
    <ul class="left">
      <li>
        <div class="wiki-header-logo">
          <%= link_to(image_tag("placeholder_logo.png"), "/") %>
        </div>
      </li>
      <li class="divider"></li>
    </ul>
    <% if user_signed_in? %>

      <ul class="right">
        <li class="wiki-header-search search has-form">
          <form>
            <div class="row collapse">
              <div class="small-2 columns">
                <i class="foundicon-search wiki-header-search-icon"></i>
              </div>

              <div class="small-10 columns">
                <input type="text" class="wiki-header-search-input" placeholder="<%= t(".search_bar_placeholder_text") %>"/>
              </div>
            </div>
          </form>
        </li>

        <li class="divider"></li>

        <li class="wiki-header-signed-in">
        <span class="wiki-header-signed-in-signed-in-as">
          <%= t(".signed_in_as_text") %>
        </span>
        <span class="wiki-header-signed-in-first-name">
          <%= current_user.name %>
        </span>
        </li>
      </ul>
    <% end %>
  </section>
</nav>