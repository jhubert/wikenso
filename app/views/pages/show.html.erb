<% if @wiki.pages.present? %>
  <div class="row wiki-pages-view">
    <div class="large-3 columns wiki-pages-view-index">
      <ul class="wiki-pages-view-index-list">
        <% @wiki.pages.each do |page| %>
          <li class="wiki-pages-view-index-list-item <%= page == @page ? "active" : "" %>">
            <%= link_to page.title, page_path(page) %>
          </li>
        <% end %>
      </ul>
    </div>

    <div class="large-9 columns wiki-pages-view-single display" data-id=<%= @page.id %>>
      <%= link_to "Edit", edit_page_path(@page), class: "edit-wiki-page-button" %>

      <div class="wiki-pages-view-single-title">
        <%= @page.title %>
      </div>

      <div class="wiki-pages-view-single-text">
        <p><%= sanitize @page.text, tags: %w(p em strong br) %></p>
      </div>
    </div>

  </div>
<% end %>

<script type="text/javascript">
  $(document).on('page:fetch', function () {
    NProgress.start();
  });
  $(document).on('page:load', function () {
    NProgress.done();
  });
</script>